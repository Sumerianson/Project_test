{% extends 'base.html.twig' %}

{% block title %}Traitement{% endblock %}

{% block body %}
    <h1>Traitement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ traitement.id }}</td>
            </tr>
            <tr>
                <th>Code_pat</th>
                <td>{{ traitement.codePat }}</td>
            </tr>
            <tr>
                <th>Code_maladie</th>
                <td>{{ traitement.codeMaladie }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ traitement.observation }}</td>
            </tr>
            <tr>
                <th>Date_deb</th>
                <td>{{ traitement.dateDeb ? traitement.dateDeb|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ traitement.dateFin ? traitement.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat_pat</th>
                <td>{{ traitement.etatPat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_traitement_index') }}">back to list</a>

    <a href="{{ path('app_traitement_edit', {'id': traitement.id}) }}">edit</a>

    {{ include('traitement/_delete_form.html.twig') }}
{% endblock %}
