{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <h1>Consultation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code patient</th>
                <th>Code personnel</th>
                <th>Type de consultation</th>
                <th>Frais de consultation</th>
                <th>Date de consultation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.codePat }}</td>
                <td>{{ consultation.codePers }}</td>
                <td>{{ consultation.typeConsult }}</td>
                <td>{{ consultation.fraisConsult }}</td>
                <td>{{ consultation.dateConsult ? consultation.dateConsult|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_consultation_show', {'id': consultation.id}) }}">show</a>
                    <a href="{{ path('app_consultation_edit', {'id': consultation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_consultation_new') }}">Create new</a>
{% endblock %}
