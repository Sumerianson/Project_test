{% extends 'base.html.twig' %}

{% block title %}Personnel index{% endblock %}

{% block body %}
    <h1>Personnel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code_pers</th>
                <th>Nom_pers</th>
                <th>Gendre</th>
                <th>Naissance</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Fonction</th>
                <th>Code_service</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personnel in personnels %}
            <tr>
                <td>{{ personnel.id }}</td>
                <td>{{ personnel.codePers }}</td>
                <td>{{ personnel.nomPers }}</td>
                <td>{{ personnel.gendre }}</td>
                <td>{{ personnel.naissance ? personnel.naissance|date('Y-m-d') : '' }}</td>
                <td>{{ personnel.email }}</td>
                <td>{{ personnel.telephone }}</td>
                <td>{{ personnel.adresse }}</td>
                <td>{{ personnel.fonction }}</td>
                <td>{{ personnel.codeService }}</td>
                <td>
                    <a href="{{ path('app_personnel_show', {'id': personnel.id}) }}">show</a>
                    <a href="{{ path('app_personnel_edit', {'id': personnel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_personnel_new') }}">Create new</a>
    <a href="{{ path('app_home') }}">Retour Ã  l'accueil</a>

{% endblock %}
